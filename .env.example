# Supabase Configuration (REQUIRED)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Typeform Configuration (REQUIRED for webhook security)
TYPEFORM_WEBHOOK_SECRET=your_typeform_webhook_secret_here

# GMass Configuration (OPTIONAL - for email sending)
GMASS_API_KEY=your_gmass_api_key_here

# Slack Configuration (REQUIRED for agentic updates)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_CHANNEL=inbound-leads  # Channel for lead notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here  # Optional fallback

# Anthropic Configuration (REQUIRED for LangGraph agent)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email Configuration
FROM_EMAIL=hello@yourcompany.com

# Redis Configuration (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=production  # or 'development'
DEBUG=false  # Set to 'true' only in development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security Note: NEVER commit actual credentials to version control!
# Copy this file to .env and fill in your actual values.
